<h1>New Announcement</h1>
<div class="row">
  <div class="col-md-6 col-offset-3">
    <%= form_with(model: @announcement, local: true) do |f| %>
    <%= render 'shared/post_error_messages' %>
      <%= f.label :announcement %>
      <%= f.text_area :announcement, :required => true, class: 'form-control' %>
      <%= f.label :expiration %>
      <%= f.date_select :expiration, class: 'form-control' %>
      <%= f.submit 'Create Announcement', class: 'btn btn-primary form-control' %>
    <% end %>
  </div>
</div>
