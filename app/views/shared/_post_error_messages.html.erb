<% if @announcement.errors.any? %>
  <div id="error_explanation"></div>
  <div class="alert alert-danger">The form contains <%= pluralize(@announcement.errors.count, 'error') %>
  </div>
  <ul>
    <% @announcement.errors.full_message.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>
